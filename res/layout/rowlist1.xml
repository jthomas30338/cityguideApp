<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_driver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:dividerHeight="1dp"
     android:background="#fff"
    android:orientation="horizontal" >
    
    
     <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.35"
        android:orientation="vertical">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/rowImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.42"
        android:scaleType="fitXY"
        android:src="@drawable/not_found_banner" />
    
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.71"
        android:dividerHeight="1dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/detail_inlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="6dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="1dip"
                android:layout_marginBottom="0dip"
                android:paddingBottom="0dip"
              
                 >
               <!--  android:layout_weight="0.20" -->

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dip"
                   
                     />

                <TextView
                    android:id="@+id/rowName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  
                    android:text="Title"
                    android:textColor="#2c3e50"
                    android:textSize="16sp"
                   
                     />
                  <!-- android:layout_weight="1.05" -->
                

            </LinearLayout>

            <TextView
                android:id="@+id/prodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:paddingTop="0dip"
                android:gravity="start|center_vertical"
                android:text="productname"
                android:textColor="#8E8D8D" />

            <RatingBar
                android:id="@+id/ratingBarList"
                  style="@style/small_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:layout_gravity="center_vertical"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:isIndicator="true"
                android:numStars="5"
                android:paddingTop="1dip"
                android:rating="0"
                android:layout_marginTop="2dip"
                android:stepSize="0.1" />

            <!--
                     <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.20"
                    android:orientation="horizontal" >

                    android:textColor="#676767"

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:text="Address: "
                        android:textColor="#556FFC"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.65"
                        android:text="Not Available"
                        android:textColor="#556FFC"
                        android:textSize="15sp" />
                </LinearLayout>
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="3dip"
                
                 >
                 <!--  android:layout_weight="0.20" -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dip"
                  
                    android:background="@drawable/splace" />

                <TextView
                     android:id="@+id/rowAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:text="Address"
                    android:textColor="#8E8D8D"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               
                android:gravity="start|center_vertical"
                android:text="distance"
                android:textColor="#8E8D8D"
                android:layout_gravity="top"
                android:textSize="13dp" 
                />
            <!--  android:layout_weight="0.20" -->
        </LinearLayout>
    </LinearLayout>
  <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight=".08"
        android:gravity="center">

        <ImageView
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:background="@drawable/arrow" />
    </LinearLayout>
</LinearLayout>